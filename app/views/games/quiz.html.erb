<div class='container pb-5 min-vh-100 d-flex flex-column justify-content-center'>
  <div class='container-fluid'>
    <div class='ms-3'
    data-controller='map'
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>"
    style="height: 500px; width: 100%;">
    </div>
    <div class="container mt-4">
      <div class="card shadow-lg">
        <div class="card-body">
          <h3 class="card-title text-center fw-bold mb-3"><%= @question.content %></h3>
          <turbo-frame id='quiz-form'>
 <!-- Closes form -->
          </turbo-frame>
        </div>
      </div>
    </div>
  </div>
  <div class='d-flex justify-content-center mt-2 button-container'>
    <%= link_to 'Continue', game_quiz_path(@game), class: 'btn btn-primary' %>
  </div>
</div>
