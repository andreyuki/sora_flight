<div class='container pb-5 min-vh-100 d-flex flex-column justify-content-between'>
  <div class='container-fluid'>
    <div class='ms-3'
    data-controller='map'
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>"
    style="height: 500px; width: 100%;">
    </div>
    <div class="container mt-4">
      <div class="card shadow-lg">
        <div class="card-body">
          <h3 class="card-title text-center"><%= @question.content %></h3>
          <%= simple_form_for @guess, url: guesses_path, html: { data: { controller: "choice" } } do |f| %>
            <div class="d-flex flex-column gap-3" data-choice-target='form'>
              <% @question.choices.each do |choice| %>
                <div class="choice-card card p-3 shadow-sm text-center"
                 data-choice-id="<%= choice.id %>"
                 data-action="click->choice#select">
                  <div class="card-body">
                    <%= choice.content %>
                  </div>
                </div>
              <% end %>
            </div>
            <!-- Hidden Simple Form field to store selected choice -->
            <%= f.hidden_field :choice_id, data: { choice_target: "hiddenInput" } %>
          <% end %> <!-- Closes form -->
        </div>
      </div>
    </div>
  </div>
</div>
