<div class='container pb-5 min-vh-100 d-flex flex-column justify-content-between'>
  <div class='container-fluid'>
    <%= render 'shared/user_card' %>
    <div data-results-animations-score-value="<%= @game.score %>" class='text-center mt-2'>
      <div data-controller='reveal'>
        <div class="justify-content-between align-items-center bg-light p-3 rounded shadow fs-2 fw-bolder mb-2">Results</div>
        <% @results.each do |result| %>
          <div data-reveal-target="item" class="hidden d-flex justify-content-between align-items-center bg-light rounded shadow p-3 mt-2">
            <span class='text-start fs-4'><%= result[:guess] %></span>
            <% if result[:correct] %>
              <span data-reveal-target='icon' class="text-success fw-bold d-none">✅</span>
            <% else %>
              <span data-reveal-target='icon' class="text-danger fw-bold d-none">❌</span>
            <% end %>
          </div>
          <% unless result[:correct] %>
            <div data-reveal-target="item" class="hidden d-flex justify-content-between align-items-center bg-light bg-secondary-subtle rounded shadow p-3 mb-1 fs-6 text-success">
              <span class='text-start fs-6'><%= result[:answer] %></span>
            </div>
          <% end %>
        <% end %>
        <div data-reveal-target="item" data-action="reveal:show->score#animateScore" class="hidden d-flex justify-content-between align-items-center bg-light p-3 rounded shadow mt-2">
          <div class='d-flex w-100 justify-content-between fs-3 fw-bold'>
            <p>Points</p>
            <span data-controller='score' data-score-target-value="<%= @game.score %>" data-score-duration-value='1000'>0</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='d-flex justify-content-between mt-2'>
    <%= link_to 'Dashboard', main_path, class: 'btn btn-primary fs-3', data:
        {action: "click->page#removeFullscreen"} %>
    <%= link_to 'Play again', game_load_path, class: 'btn btn-primary fs-3' %>
  </div>
</div>
