<div class='container mt-3'>
  <%= render 'shared/user_card' %>
  <div class='text-center mt-3'>
    <!--
    <img src="<%= asset_path('airplane.png') %>" alt="Flying Airplane" class="airplane">
    -->
    <div data-controller='reveal'>
      <h2 data-reveal-target="item" class="hidden justify-content-between align-items-center bg-light p-3 rounded shadow">Results</h2>
      <% @results.each do |result| %>
        <div data-reveal-target="item" class="hidden d-flex justify-content-between align-items-center bg-light p-3 rounded shadow">
          <span><%= result[:question] %></span>
          <% if result[:correct] %>
            <span class="text-success fw-bold">✅</span>
          <% else %>
            <span class="text-danger fw-bold">❌</span>
          <% end %>
        </div>
      <% end %>
      <div data-reveal-target="item" data-action="reveal:show->score#animateScore" class="hidden d-flex justify-content-between align-items-center bg-light p-3 rounded shadow">
        <div class='d-flex w-100 justify-content-between'>
          <p>Points earned</p>
          <span data-controller='score'
          data-score-target-value="<%= @game.score %>"
          data-score-duration-value='1000'>0</span>
        </div>
      </div>
      <div class='d-flex justify-content-between mt-3'>
        <%= link_to 'Dashboard', main_path, class: 'btn btn-primary' %>
        <%= link_to 'Play again', game_load_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
