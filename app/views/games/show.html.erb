<div class='container mt-3'>
  <%= render 'shared/user_card' %>
  <div class='text-center mt-3'>
    <!--
    <img src="<%= asset_path('airplane.png') %>" alt="Flying Airplane" class="airplane">
    -->
    <h2 class='fw-bold'>You earned <%= @game.score %> points!</h2>
    <% @results.each do |result| %>
      <%= render 'result', result: result %>
    <% end %>
    <div class='d-flex justify-content-between mt-3'>
      <%= link_to 'Dashboard', main_path, class: 'btn btn-primary' %>
      <%= link_to 'Play again', game_load_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
