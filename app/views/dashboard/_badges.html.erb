<div class="badges-container">
  <h1 class="text-center my-2 text-gray">Achievements</h1>
  <div class="badge-cards mb-5">
    <% @all_badges.each do |badge| %>
      <% earned = @earned_badges.include?(badge.id) %>
      <button type="button" class="badge-card text-center shadow-sm" style="<%= earned ? 'border: solid 8px rgb(106, 198, 212)' : 'border: solid 8px lightGray' %>"
            data-bs-toggle="modal" data-bs-target="#badgeModal-<%= badge.id %>">
        <%= image_tag badge.custom_fields[:icon], alt: "text", style: earned ? 'filter: none;' : 'filter: grayscale(100%);' %>
        <p style="<%= earned ? 'color: gray;' : 'color: lightGray;'%>"><%= badge.name %></p>
      </button>
      <div class="modal fade" id="badgeModal-<%= badge.id %>" tabindex="-1" aria-labelledby="badgeModalLabel-<%= badge.id %>" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="badgeModalLabel-<%= badge.id %>"><%= badge.name %></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p><%= badge.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
