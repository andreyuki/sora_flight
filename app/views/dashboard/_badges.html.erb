<% if @total_games %>
  <h1 class="text-center my-2 text-secondary">my badges</h1>
  <div class="badge-cards">
    <% current_user.badges.each do |badge| %>
      <div class="badge-card text-center m-3 shadow-sm p-5">
        <h1><%= content_tag :i, "", class: "fa fa-#{badge.custom_fields[:icon]}" %></h1>
        <p><%= badge.name %></p>
        <p><%#= badge.name %></p>
        <h2> <%#= current_user.games.count %></h2>
      </div>
    <% end %>
  </div>
<% end %>
