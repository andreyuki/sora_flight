      <span class="jfk jfkslip">AICM</span>
      <span class="plane planeslip"><?xml version="1.0" ?><svg clip-rule="evenodd" fill-rule="evenodd" height="50" width="50" image-rendering="optimizeQuality" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg"><g stroke="#222"><line fill="none" stroke-linecap="round" stroke-width="30" x1="300" x2="55" y1="390" y2="390"/><path d="M98 325c-9 10 10 16 25 6l311-156c24-17 35-25 42-50 2-15-46-11-78-7-15 1-34 10-42 16l-56 35 1-1-169-31c-14-3-24-5-37-1-10 5-18 10-27 18l122 72c4 3 5 7 1 9l-44 27-75-15c-10-2-18-4-28 0-8 4-14 9-20 15l74 63z" fill="#222" stroke-linejoin="round" stroke-width="10"/></g></svg></span>
      <span class="sfo sfoslip"> NRT</span>
      <div class="sub-content">
        <span class="name"> PASSENGER <br><span> <%= current_user.username %></span></span>
        <span class="flight">FLIGHT N&deg;<br><span><%= @flight.flight_number%></span></span>
        <span class="gate">GATE<br><span><%="#{('A'..'Z').to_a.sample}#{rand(1..45)}" %></span></span>
        <span class="seat">SEAT<br><span> <%=@seat = "#{('A'..'D').to_a.sample}#{rand(1..45)}" %></span></span>
        <span class="boardingtime">BOARDING TIME<br><span>  <%= @flight.departure_datetime.strftime("%b %e, %l:%M %p") %> </span></span>

         <span class="flight flightslip">FLIGHT N&deg;<br><span><%=@flight.flight_number%>-</span></span>
          <span class="seat seatslip">SEAT<br><span><%=@seat%></span></span>
         <span class="name nameslip">PASSENGER <br><span><%= current_user.username %></span></span>
